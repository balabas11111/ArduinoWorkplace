#ifndef LIBRARIES_TIMETRIGGER_ACTIONLISTENERHELPER_H_
#define LIBRARIES_TIMETRIGGER_ACTIONLISTENERHELPER_H_

#include "Arduino.h"
#include "ActionEvent.h"

class ActionListenerHelper{

public:
	ActionListenerHelper(ActionEvent* _actionEvents);

	ActionEvent buildActionEvent(String eventName,std::function<void(String)> _func);
	String* getEventNames();
	boolean executeActionEvent(String _eventName,String _arg);

private:
	ActionEvent* actionEvents;
};


#endif /* LIBRARIES_TIMETRIGGER_ACTIONLISTENERHELPER_H_ */
