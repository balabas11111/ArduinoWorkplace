#ifndef LIBRARIES_TIMETRIGGER_ACTIONEVENT_H_
#define LIBRARIES_TIMETRIGGER_ACTIONEVENT_H_

#import "Arduino.h"
#include <functional>

class ActionEvent{

public:
	ActionEvent(String _actionName,std::function<void(void)> _func);
	ActionEvent(String _actionName,std::function<void(String)> _func);

	boolean executeVoidFunction();
	boolean executeStringFunction(String param);

private:
	String actionName;
	std::function<void(void)> func;
	std::function<void(String)> funcString;
};


#endif /* LIBRARIES_TIMETRIGGER_BUTTONB_H_ */
